{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h3 class="m-3">Les choix de {{ client.name }}</h3>
    <div class="row">
        <div class="col-md-4 p-2">
            <a href="#" style="text-decoration: none">
                <div class="card">
                    <div class="card-header">
                        <h6 class="text-dark">Site touristique :</h6>{{ site.name }}
                    </div>
                    <div class="card-body">
                        <h4>{{ site.type }}</h4>
                    </div>
                    <div class="card-footer">
                        <strong>{{ site.prix }} Ar</strong>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4 p-2">
            <a href="#" style="text-decoration: none">
                <div class="card">
                    <div class="card-header">
                        <h6 class="text-dark">Thème du voyage :</h6>{{ theme.name }}
                    </div>
                    <div class="card-body">
                        <h4>{{ theme.titre }}</h4>
                        <p>{{ theme.caracteristique }}</p>
                    </div>
                    <div class="card-footer">
                        <strong>{{ theme.prix }} Ar</strong>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4 p-2">
            <a href="" style="text-decoration: none">
                <div class="card">
                    <div class="card-header">
                        <h6 class="text-dark">Activité :</h6>{{ activty.name }}
                    </div>
                    <div class="card-body">
                        <h4>{{ activty.type }}</h4>
                    </div>
                    <div class="card-footer">
                        <strong>{{ activty.prix }} Ar</strong>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4 p-2">
            <a href="" style="text-decoration: none">
                <div class="card">
                    <div class="card-header">
                        <h6 class="text-dark">Hôtel :</h6>{{ hotel.name }}
                    </div>
                    <div class="card-body">
                        <h4>{{ hotel.type }}</h4>
                    </div>
                    <div class="card-footer">
                        <strong>{{ hotel.prix }} Ar</strong>
                    </div>
                </div>
            </a>
        </div>
    </div>
    <div class="">
        <table class="table">
            {% set prTotal = site.prix+theme.prix+hotel.prix+activty.prix %}
            {% set prTotalMin = site.prix+theme.prix %}
            <tr><td>Prix maximum</td><td>{{ prTotal~' Ar' }} <input type="radio" name="price" value="{{ prTotal }}" checked></td></tr>
            <tr><td>Prix minimum possible</td><td>{{ prTotalMin~' Ar' }} <input type="radio" name="price" value="{{ prTotalMin }}"></td></tr>
        </table>
    </div>

    <div class="">
        <a href="#" class="btn btn-primary">Poursuivre la réservation</a>
    </div>

{% endblock %}
