{% extends 'base.html.twig' %}

{% block title %}Agence de voyage{% endblock %}

{% block body %}
    <h1 style="text-align: center">{{ type_voyage.name }}&nbsp;{{ type_voyage.titre }}</h1>

    <table class="table" style="text-align: center">
        <tbody>
            <tr>
                <th class="bg-success">Id</th>
                <td>{{ type_voyage.id }}</td>
            </tr>
            <tr>
                <th class="bg-success">Nom</th>
                <td>{{ type_voyage.name }}</td>
            </tr>
            <tr>
                <th class="bg-success">Titre</th>
                <td>{{ type_voyage.titre }}</td>
            </tr>
            <tr>
                <th class="bg-success">Caracteristique</th>
                <td>{{ type_voyage.caracteristique }}</td>
            </tr>
        </tbody>
    </table>
    <div style="text-align: center; display: flex; padding-bottom: 10px">
        <a class="btn btn-secondary text-white p-1 "style="text-decoration: none;" href="{{ path('app_type_voyage_index') }}">Retour</a>&nbsp;

        <a class="btn btn-warning text-white p-1 "style="text-decoration: none;" href="{{ path('app_type_voyage_edit', {'id': type_voyage.id}) }}">Modifier</a>&nbsp;

        {{ include('type_voyage/_delete_form.html.twig') }}
    </div>

{% endblock %}
