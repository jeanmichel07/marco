{% extends 'base.html.twig' %}

{% block title %}Agence de voyage{% endblock %}

{% block body %}
    <h1 style="text-align: center; font-weight: bold; font-family: Arial">ACTIVITE</h1>

    <table class="table" style="text-align: center">
        <thead>
            <tr class="bg-success">
                <th>NOM</th>
                <th>TYPE</th>
                <th>PRIX</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for activite in activites %}
            <tr>
                <td>{{ activite.name }}</td>
                <td>{{ activite.type }}</td>
                <td>{{ activite.prix }}</td>
                <td>
                    <a  class="btn btn-success text-white p-1" style="text-decoration: none;" href="{{ path('app_activite_show', {'id': activite.id}) }}">Voir</a>
                    <a class="btn btn-warning text-white p-1" style="text-decoration: none;" href="{{ path('app_activite_edit', {'id': activite.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de liste</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if app.user %}
        {% if app.user.roles[0] == "ROLE_ADMIN" %}
            <div style="text-align: center; padding-bottom: 10px">
                <a class="btn btn-primary text-white p-1"
                   style="text-decoration: none;" href="{{ path('app_activite_new') }}">Ajouter</a>
            </div>
        {% endif %}
    {% endif %}
{% endblock %}
