{% extends 'base.html.twig' %}

{% block title %}Agence de voyage{% endblock %}

{% block body %}
    <h1>SiteTouristique index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Type</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site_touristique in site_touristiques %}
            <tr>
                <td>{{ site_touristique.id }}</td>
                <td>{{ site_touristique.name }}</td>
                <td>{{ site_touristique.type }}</td>
                <td>{{ site_touristique.prix }}</td>
                <td>
                    <a href="{{ path('app_site_touristique_show', {'id': site_touristique.id}) }}">show</a>
                    <a href="{{ path('app_site_touristique_edit', {'id': site_touristique.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if app.user %}
        {% if app.user.roles[0] == "ROLE_ADMIN" %}
        <a href="{{ path('app_site_touristique_new') }}">Create new</a>
        {% endif %}
    {% endif %}
{% endblock %}
