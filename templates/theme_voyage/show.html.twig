{% extends 'base.html.twig' %}

{% block title %}Agence de voyage{% endblock %}

{% block body %}
    <h1 style="text-align: center">{{ theme_voyage.name }}&nbsp;{{ theme_voyage.titre }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ theme_voyage.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ theme_voyage.name }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ theme_voyage.titre }}</td>
            </tr>
            <tr>
                <th>Caracteristique</th>
                <td>{{ theme_voyage.caracteristique }}</td>
            </tr>
            <tr>
                <th>Prix</th>
